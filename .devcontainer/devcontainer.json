{
    "name": "fastapi-py3",
    "image": "python:3.9",
    // "shutdownAction": "none",
    "shutdownAction": "stopContainer",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-iot.vscode-ros",
                "ms-python.black-formatter"
            ]
        }
    },
    "runArgs": [
        "--network",
        "host"
    ],
    "privileged": true,
    "workspaceFolder": "/workspace",
    "workspaceMount": "source=/home/wezaii/Development/PreDevTesting/fastapi,target=/workspace,type=bind",
    // "postStartCommand": "tail -f /dev/null",
    "postCreateCommand": "pip3 install -r /workspace/requirements.txt",
    "postStartCommand": "apt-get update && apt-get install ffmpeg libsm6 libxext6 -y"
}